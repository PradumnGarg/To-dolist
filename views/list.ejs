<%- include("header") -%>
    
    <div class="box" id="heading">

        <h1><%=ListTile%></h1>
    </div>

<div class="box">
    <% newItems.forEach(function(newItem){ %>

        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=newItem._id %>" onChange="this.form.submit()">
                <p><%= newItem.name %></p>
            </div>
            <input type="hidden" name="list" value="<%=ListTile%>"></input>
        </form>
       
    
        <% }) %>

        
<form class="item" action="/" method="POST">

    <input type="text"  name="chore" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%=ListTile%>">+</button>
</form>

</div>

<%- include("footer") -%>
